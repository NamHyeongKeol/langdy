<div class="container">
  <div class="panel panel-default col-md-10 col-md-offset-1">
    <div class="panel-heading">
        <h3>코인 거래 내역</h3>
    </div>
    <div class="panel-body">
        <!-- 거래ID|일시|내용|거래액|잔액 -->
        <table class="table table-striped table-hover">
            <thead>
              <tr>
              <th class="col-md-2">거래ID</th>
              <th class="col-md-2">일시</th>
              <th class="col-md-6">내용</th>
              <th class="col-md-1">거래액</th>
              <th class="col-md-1">잔액</th>
              </tr>
            </thead>
        </table>    
        <table class="table table-striped table-hover">
            <% @coin_histories.each do |item| %>
                <tbody>
                  <tr>
                    <td class="col-md-2">2134adsf</td>
                    <td class="col-md-2"><%= item.time.to_formatted_s(:db) %></td>
                    <td class="col-md-6">코인 구매 신청</td>
                    <td class="col-md-1"><%= item.amount %>코인</td>
                    <td class="col-md-1"><%= current_user.cash %>코인</td>
                  </tr>
                  <tr>
                    <td>2134adsf</td>
                    <td class="col-md-1"><% @time %></td>
                    <td>입금 확인 및 코인 충전 완료</td>
                    <td>n코인</td>
                    <td><%= current_user.cash %>코인</td>
                  </tr>
                  <tr>
                    <td>2134adsf</td>
                    <td class="col-md-1"><% @time %></td>
                    <td>코인 환전 신청</td>
                    <td>n코인</td>
                    <td><%= current_user.cash %>코인</td>
                  </tr>
                  <tr>
                    <td>2134adsf</td>
                    <td class="col-md-1"><% @time %></td>
                    <td>코인 차감 및 입금 완료</td>
                    <td>n코인</td>
                    <td><%= current_user.cash %>코인</td>
                  </tr>
                </tbody>
            <% end %>
        </table>
        
    </div>
  </div>
</div>
