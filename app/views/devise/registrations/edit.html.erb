<br><br><br>
<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <div class="well">
        <%= devise_error_messages! %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { method: :put, :class => "form-horizontal"}) do |f| %>
          <fieldset>
            <legend>Edit <%= resource_name.to_s.humanize %></legend>

            <div class="form-group">
              <label for="inputName" class="col-md-2 control-label">Profile Picture</label>
              <div class="col-md-10">
                <%= f.file_field :profile_pic, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <label for="inputName" class="col-md-2 control-label">Full name</label>
              <div class="col-md-10">
                <%= f.text_field :name, class: "form-control", :placeholder => "name", autofocus: true %>
              </div>
            </div>
            <div class="form-group">
              <label for="inputEmail" class="col-md-2 control-label">Email</label>
              <div class="col-md-10">
                <%= f.email_field :email, class: "form-control", :placeholder => "email", autofocus: true %>
              </div>
            </div>

            <div class="form-group">
              <label for="inputGender" class="col-md-2 control-label">Gender</label>
              <div class="col-md-10">
                <%= f.select(:gender, ['Male', 'Female'], {}, { :class => 'form-control' }) %>
              </div>
            </div>

            <div class="form-group">
              <label for="inputPassword" class="col-md-2 control-label">Password</label>
              <div class="col-md-10">
                <%= f.password_field :password, class: "form-control", :placeholder => "Leave blank if you don't want to change it", autocomplete: "off" %>
              </div>
            </div>

            <div class="form-group">
              <label for="inputPassword" class="col-md-2 control-label">Password confirmation</label>
              <div class="col-md-10">
                <%= f.password_field :password_confirmation, class: "form-control", :placeholder => "password", autocomplete: "off" %>
              </div>
            </div>

            <div class="form-group">
              <label for="currentPassword" class="col-md-2 control-label">Current password</label>
              <div class="col-md-10">
                <%= f.password_field :current_password, class: "form-control", :placeholder => "We need your current password to confirm your changes", autocomplete: "off" %>
              </div>
            </div>

            <div class="form-group">
              <label for="inputName" class="col-md-2 control-label">Language to learn</label>
              <div class="col-md-4">
                <%= f.select(:lang_to_learn, ['English', 'Korean', 'Chinese'], {}, { :class => 'form-control' }) %>
              </div>
              <label for="inputName" class="col-md-2 control-label">Mother tongue</label>
              <div class="col-md-4">
                <%= f.select(:native_lang, ['English', 'Korean', 'Chinese'], {}, { :class => 'form-control' }) %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-lg-10 col-lg-offset-2">
                <%= f.submit "Update", :class => "btn btn-primary" %>
              </div>
            </div>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>
