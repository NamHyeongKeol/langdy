<br><br><br>
<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <div class="well">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
          <fieldset>
            <legend>로그인</legend>
            <div class="form-group">
              <label for="inputEmail" class="col-md-3 control-label">이메일 아이디</label>
              <div class="col-md-9">
                <%= f.email_field :email, class: "form-control", :placeholder => "이메일 아이디", autofocus: true %>
              </div>
            </div>
            <div class="form-group">
              <label for="inputPassword" class="col-md-3 control-label">비밀번호</label>
              <div class="col-md-9">
                <%= f.password_field :password, class: "form-control", :placeholder => "비밀번호", autocomplete: "off" %>
                <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :아이디_기억하기 %>
                  </div>
                <% end -%>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-9 col-lg-offset-3">
                <%= f.submit "로그인", :class => "btn btn-primary" %>
              </div>
            </div>
            <div class="col-lg-9 col-lg-offset-3">
              <%= render "devise/shared/links" %>
            </div>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>
