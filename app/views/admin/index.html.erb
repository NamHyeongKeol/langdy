<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="list-group">
        <a href="#" class="list-group-item active">
          Teachers
        </a>
      </div>
    </div>

    <div class="col-md-9">
      <!-- Teacher requests -->
      <div class="col-md-12">
        <h2> Teacher Request </h2>
        <table class="table table-striped table-hover ">
          <thead>
            <tr>
              <th class="col-md-9">Name</th>
              <th class="col-md-3">Approve</th>
            </tr>
          </thead>
          <tbody>
            <% @teacher_request.each do |request| %>
              <tr>
                <td>
                  <%= link_to teacher_path(request.user) do %>
                    <%= request.user.name %>
                  <% end %>
                </td>
                <td>
                  <%= link_to teacher_certify_path(request.id), {:class => "btn btn-default"} do %>
                    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- Teacher requests -->

      <!-- Teachers -->
      <div class="col-md-12">
        <h2> Teachers </h2>
        <table class="table table-striped table-hover ">
          <thead>
            <tr>
              <th class="col-md-9">Name</th>
            </tr>
          </thead>
          <tbody>
            <% @teachers.each do |teacher| %>
              <tr>
                <td><%= teacher.name %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- Teachers -->
    </div>

  </div>
</div>
