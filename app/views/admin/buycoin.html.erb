<div class="container">
  <div class="row">
    <div class="col-md-2">
      <div class="list-group">
        <%= render partial: '/admin/menu_list' %>
      </div>
    </div>

    <div class="col-md-10">
      <!-- Teacher requests -->
      <div class="col-md-12">
        <h2> Buy Coin List </h2>
        <table class="table table-striped table-hover ">
          <thead>
            <tr>
              <th class="col-md-1">Completion</th>
              <th class="col-md-1">How To Pay</th>
              <th class="col-md-1">Account Holder</th>
              <th class="col-md-2">Account Number</th>
              <th class="col-md-1">Amount</th>
              <th class="col-md-2">Start Date</th>
              <th class="col-md-2">End Date</th>
              <th class="col-md-2">Dispose</th>
            </tr>
          </thead>
          <tbody>
            <% @buycoin_histories.each do |h| %>
              <tr>
                <td><%= h.is_complete %></td>
                <td><%= h.how_to_pay %></td>
                <td><%= h.buycoin.account_holder %></td>
                <td><%= h.buycoin.account_number %></td>
                <td><%= h.amount %></td>
                <td><%= h.start_time %></td>
                <td><%= h.end_time || "아직 완료되지 않았습니다." %></td>
                <td><button type="button" class="btn btn-primary" onclick="cancelLesson(<%= item.id %>, this)">취소</button></td>
                <td></td>
                  <%# if h.is_permitted %>
                  <%# else %>
                    <%# link_to permit_purchase_path(h.id), {:class => "btn btn-default"} do %>
                      <%# <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> %>
                    <%# end %>
                  <%# end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- Teacher requests -->

    </div>

  </div>
</div>

