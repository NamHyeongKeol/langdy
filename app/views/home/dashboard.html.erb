            </div>
            <div class="col-md-2 column">
              <h4>수강 확정 여부</h4>
            </div>
          </div>
          <% @lesson_applied.each do |item| %>
            <div class="row" id="lesson_applied<%= item.id %>">
              <div class="col-md-1 column first-column">
                <%= item.course.rank %>
              </div>
              <div class="col-md-1 column">
                <%= item.course.lang %>
