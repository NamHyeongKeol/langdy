<div class="container">
  <div class="row">

    <!-- Left column -->
    <div class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-body">
          <% if current_user.profile_pic.url.nil? %>
            <img src="http://thesocialmediamonthly.com/wp-content/uploads/2015/08/photo.png" class="profile-pic col-md-offset-2 col-md-8"/>
          <% else %>
            <img src=<%= current_user.profile_pic.url %> class="profile-pic col-md-offset-2 col-md-8"/>
          <% end %>
          <div class="col-md-12" style="text-align:center;">
            <h3><%= current_user.name %></h3>
            <a href="/purchase" class="btn btn-sm btn-primary">
              <span class="glyphicon glyphicon-education" aria-hidden="true"></span>
              <%= current_user.cash %>p
            </a>
          </div>
        </div>
        <ul class="list-group">
          <li class="list-group-item">
            <%= link_to edit_user_registration_path do %>
              <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
              Edit Profile
            <% end %>
          </li>
        </ul>
      </div>

      <% unless current_user.is_teacher or not current_user.teacher_info.nil? %>
        <ul class="list-group">
          <%= link_to apply_for_teacher_path do %>
            <li class="list-group-item">
              <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
              Apply for being a teacher
            </li>
          <% end %>
        </ul>
      <% end %>

      <div class="panel panel-default">
        <div class="panel-body">
          <div class="col-md-12">
            <h5>
              Leave your feedback for improve this platform. We will repay your kindness.
            </h5>
            <%= form_for :feedback, url: feedback_path do |f| %>
              <%= f.text_field :text, :autocomplete => :off, class: "col-md-12 form-control" %>
              <%= f.submit "Leave feedback!", class: "btn btn-default col-md-12" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <!-- Left column -->

    <!-- Right column -->
    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-body">
          <h3> Lessons </h3>
          <table class="table table-striped table-hover ">
            <thead>
              <tr>
                <th class="col-md-2">#</th>
                <th class="col-md-2">Mon</th>
                <th class="col-md-2">Tue</th>
                <th class="col-md-2">Wed</th>
                <th class="col-md-2">Thu</th>
                <th class="col-md-2">Fri</th>
              </tr>
            </thead>
            <tbody>
              <% 10.upto(22).each do |h| %>
                <tr>
                  <th><%= h %>:00 - <%= h+1 %>:00</th>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-body">
          <h3> Suggested Lessons </h3>
          <div class="col-md-6">
            <div class="well col-md-12">
              <img src="http://thesocialmediamonthly.com/wp-content/uploads/2015/08/photo.png" class="profile-pic col-md-3"/>
              <div class="col-md-9">
                <h4>Jack's Advanced English</h4>
                <p>This class is for ~</p>
              </div>
            </div>
          </div>

          <div class="col-md-6">
            <div class="well col-md-12">
              <img src="http://thesocialmediamonthly.com/wp-content/uploads/2015/08/photo.png" class="profile-pic col-md-3"/>
              <div class="col-md-9">
                <h4>Jack's Advanced English</h4>
                <p>This class is for ~</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Right column -->

  </div>
</div>
