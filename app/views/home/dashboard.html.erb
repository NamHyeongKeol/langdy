              <div class="col-md-2 column">
                <span data-lesson_id="<%= item.id.to_s %>" id="confirm_span<%= item.id.to_s %>"><%= item.get_confirm_teacher.html_safe %></span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
