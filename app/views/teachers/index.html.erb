<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="breadcrumb">
        <div class="col-md-2">
          <%= label_tag('label', "Gender") %>
          <%= select_tag :gender, options_for_select([['Gender', ''], ['Male', 'Male'], ['Female', 'Female']], ''), { :class => 'form-control' } %>
        </div>
        <div class="col-md-2">
          <%= label_tag('label', "Language") %>
          <%= select_tag :language, options_for_select([['Language', ''], ['English', 'English'], ['Korean', 'Korean'], ['Chinese', 'Chinese']], ''), { :class => 'form-control' } %>
        </div>
        <div class="col-md-2">
          <%= label_tag('label', "Day of Week") %>
          <%= select_tag :day_of_week, options_for_select([['Day of Week', ''], ['Monday', 'monday'], ['Tuesday', 'tuesday'], ['Wednesday', 'wednesday'], ['Thursday', 'thursday'], ['Friday', 'friday'], ['Saturday', 'saturday'], ['Sunday', 'sunday']], ''), { :class => 'form-control' } %>
        </div>
        <div class="col-md-2">
          <%= label_tag('label', "Time") %>
          <%= select_tag :time, options_for_select([['Time', ''], ['Morning', 'morning'], ['Afternoon', 'afternoon'], ['Evening', 'evening']], ''), { :class => 'form-control' } %>
        </div>
        <div class="col-md-1"><%= submit_tag 'Search', { :class => 'form-control', :id => 'submit' } %></div>
      </div>
    </div>
    <!-- Left column -->
    <div class="col-md-9">

      <div class="col-md-12" id="user_list">
        <% @teachers.each do |t| %>
          <ul class="media-list">
            <div class="panel panel-default">
              <div class="panel-body">
                <li class="media">
                  <div class="media-left">
                    <a href="#">
                      <% if t.profile_pic.url.nil? %>
                        <img class="media-object profile-pic" src="https://encrypted-tbn1.gstatic.com/images?q=tbn:ANd9GcQV5Y81SdqnTLFEXe_h-4KA2uT4DuNhON4XU32Ut6JkTl2rFDEiOMnmOA" alt="..." height="126" width="126">
                      <% else %>
                        <img class="media-object profile-pic" src=<%= t.profile_pic.url %> alt="..." height="126" width="126">
                      <% end %>
                    </a>
                  </div>
                  <div class="media-body">
                    <div class="col-md-9">
                      <%= link_to teacher_path(t) do %>
                        <h3 class="media-heading">
                          <%= t.name %>
                        </h3>
                      <% end %>
                      <p>
                      <span class="label label-success"><%= t.native_lang %></span>
                      /
                      <span class="label label-default"><%= t.teacher_info.rating %> rating</span>
                      /
                      <span class="label label-primary"><%= t.teacher_info.lecture_number %> Lessons finished </span>
                      </p>
                      <p>
                      <%= t.teacher_info.introduction %>
                      </p>
                    </div>

                    <div class="col-md-3">
                      <h4>
                        900 Chips for 1 hour
                      </h4>
                      <%= link_to "Book trial lesson", select_time_path(t), class: "btn btn-success btn-sm col-md-12" %>
                    </div>
                  </div>
                </li>
              </div>
            </div>
          </ul>

        <% end %>
      </div>
    </div>
    <!-- Left column -->

    <!-- Right column -->
    <div class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-heading">Tips</div>
        <div class="panel-body">
          <ul>
            <li>Welcome</li>
          </ul>
        </div>
      </div>
      <% unless current_user.is_teacher or not current_user.teacher_info.nil? %>
        <ul class="list-group">
          <%= link_to apply_for_teacher_path do %>
            <li class="list-group-item">
              <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
              Apply for being a teacher
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <!-- Right column -->
  </div>
</div>
