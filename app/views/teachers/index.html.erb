<div class="container">
  <div class="row">
    <!-- Left column -->
    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-body">
          <%= form_tag("/teachers/filter_teachers", method: "GET") do %>
            <input type="hidden" name="locale" value=<%= I18n.locale %>>
            <div class="col-md-3" id="small-padding">
              <%#= label_tag('label', "배우고 싶은 언어") %>
              <!-- 라벨 태그 삭제해도 되는지?-->
              <%= select_tag :language, options_for_select([['배우고 싶은 언어', ''], ['영어', 'English'], ['한국어', 'Korean'], ['중국어', 'Chinese']], params[:language]), { :class => 'form-control' } %>
            </div>
            <div class="col-md-2" id="small-padding">
              <%#= label_tag('label', "강의 요일") %>
              <%= select_tag :day_of_week, options_for_select([['강의 요일', ''], ['월요일', 'Monday'], ['화요일', 'Tuesday'], ['수요일', 'Wednesday'], ['목요일', 'Thursday'], ['금요일', 'Friday'], ['토요일', 'Saturday'], ['일요일', 'Sunday']], params[:day_of_week]), { :class => 'form-control' } %>
            </div>
            <div class="col-md-2" id="small-padding"> 
              <%#= label_tag('label', "강의 시간") %>
              <%= select_tag :time, options_for_select([['강의 시간', ''], ['00:00 ~ 05:59', 0], ['06:00 ~ 11:59', 1], ['12:00 ~ 17:59', 2], ['18:00 ~ 23:59', 3]], params[:time]), { :class => 'form-control' } %>
            </div>
            <div class="col-md-3" id="small-padding">
              <%#= label_tag('label', "선생님 성별") %>
              <%= select_tag :gender, options_for_select([['선생님 성별', ''], ['남', 'Male'], ['여', 'Female']], params[:gender]), { :class => 'form-control' } %>
            </div>
            <div class="col-md-2" id="small-padding">
              <%= submit_tag '검색', { :class => 'form-control btn btn-primary', :id => 'submit' } %>
            </div>
            <div class="col-md-5" id="small-padding">
              <% if params[:sort_rating] == 'y' %>
                <%= check_box_tag 'sort_rating', 'y', true %> 평점순으로 보기
              <% else %>
                <%= check_box_tag 'sort_rating', 'y', false %> 평점순으로 보기
              <% end %>
            </div>
        </div>
        <% end %>
      </div>
      
      <div class="panel panel-default">
        <div class="panel-body" id="user_list">
          <% if @teachers.to_a == [] %>
            <h4 style="color: #e15242;">일치하는 검색결과가 없습니다.</h4> 
          <% else %>
            <% @teachers.each do |t| %>
              <ul class="media-list">
                <div class="panel panel-default">
                  <div class="panel-body">
                    <li class="media">
                      <div class="media-left">
                        <%= link_to teacher_path(t) do %>
                          <% if t.profile_pic.url.nil? %>
                            <img class="media-object profile-pic" src="https://encrypted-tbn1.gstatic.com/images?q=tbn:ANd9GcQV5Y81SdqnTLFEXe_h-4KA2uT4DuNhON4XU32Ut6JkTl2rFDEiOMnmOA" alt="..." height="126" width="126">
                          <% else %>
                            <img class="media-object profile-pic" src=<%= t.profile_pic.url %> alt="..." height="126" width="126">
                          <% end %>
                        <% end %>
                      </div>
                      <div class="media-body">
                        <div class="col-md-9">
                          <div class="col-md-3">
                            <%= link_to teacher_path(t) do %>
                              <h3 class="media-heading">
                                <%= t.name %>
                              </h3>
                            <% end %>
                          </div>
                          <div class="col-md-9" style="height: 30px;"></div>
                          <p>
                          <% if !t.lang_to_teach_1.nil? %>
                          <span class="label label-success"><%= t.lang_to_teach_1 %></span>
                          <% end %>
                          <% if !t.lang_to_teach_2.nil? %>
                            <span class="label label-success"><%= t.lang_to_teach_2 %></span>
                          <% end %>
                          <% if !t.lang_to_teach_3.nil? %>
                            <span class="label label-success"><%= t.lang_to_teach_3 %></span>
                          <% end %>
                          /
                          <span class="label label-default"><%= t.teacher_info.rating %> rating</span>
                          /
                          <span class="label label-primary"><%= t.teacher_info.lecture_number %> Lessons finished </span>
                          </p>
                          <p>
                          <%= t.teacher_info.brief_introduction %>
                          </p>
                        </div>
           
                        <div class="col-md-3">
                          <h4 style="margin-top: 50px;">
                            <%= t.teacher_info.lecture_price %> coins / 1 hour
                          </h4>
                          <%# link_to "Book trial lesson", select_time_path(t), class: "btn btn-success btn-sm col-md-12" %>
                        </div>
                      </div>
                    </li>
                  </div>
                </div>
              </ul>
            <% end %>
          <% end %>
          
          <div class="row">
            <div style="text-align: center">
              <%= will_paginate @teachers, previous_label: "« 이전", next_label: "다음 »" %>
            </div>
          </div>
          
        </div>
      </div>
    </div>
    <!-- Left column -->

    <!-- Right column -->
    <div class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-heading">랭디 이용 팁</div>
        <div class="panel-body">
          <ul>
            <li>Welcome</li>
            <li>Welcome</li>
          </ul>
        </div>
      </div>
      <% unless current_user.is_teacher or not current_user.teacher_info.nil? %>
        <ul class="list-group">
          <%= link_to apply_for_teacher_path do %>
            <li class="list-group-item">
              <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
              Apply for being a teacher
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <!-- Right column -->
  </div>
</div>
